<h1>記事一覧</h1>

<%= image_tag "test.png", width: 400 %><br>

<%= link_to "New", new_article_path %>
<% @articles.each do |article| %>
  <h2><%= link_to article.title, article_path(article) %></h2>
  <p><%= article.text %></p>
  <%= link_to "Edit", edit_article_path(article) %>
  <%= link_to "Remove", article_path(article), method: :delete, data: {confirm: "Really?"} %>
<% end %><br>
<%= link_to "Top", welcome_index_path %>
